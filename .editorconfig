# EditorConfig is awesome: https://EditorConfig.org

# Raíz del proyecto
root = true

# Configuración general para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configuración específica para archivos Java
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Configuración para archivos de propiedades (comunes en Spring Boot)
[*.{properties,yml,yaml}]
indent_style = space
indent_size = 2

# Configuración para archivos Markdown (útil para documentación)
[*.md]
trim_trailing_whitespace = false
indent_size = 2
